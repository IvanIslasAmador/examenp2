<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnConnectBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="400dp"
            android:text="Conectar Bluetooth" />

    </LinearLayout>


    <Button
        android:id="@+id/btnUp"
        android:layout_marginTop="60dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="↑"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="170dp"
        android:textSize="50sp"
        android:layout_toRightOf="@+id/btnDetener"
        />


    <Button
        android:id="@+id/btnDown"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/btnUp"
        android:text="↓"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="170dp"
        android:layout_toRightOf="@+id/btnDetener"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:text="←"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="80dp"
        android:layout_toStartOf="@+id/btnDetener"
        android:text="→"
        android:textSize="50sp">

    </Button>

    <Button
        android:id="@+id/btnDetener"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:text="Detener" />


</RelativeLayout>

